pragma solidity ^0.8.20;

import "@openzeppelin/contracts/token/ERC721/ERC721.sol";
import "@openzeppelin/contracts/token/ERC721/extensions/ERC721URIStorage.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/utils/Counters.sol";

contract BluePunkNFT is ERC721, ERC721URIStorage, Ownable {
    using Counters for Counters.Counter;
    Counters.Counter private _tokenIdCounter;

    // Struct to store BluePunk attributes
    struct BluePunk {
        string hairStyle;  // e.g., "Blue Mohawk", "Blue Buzzcut", "Blue Dreadlocks"
        string accessory;  // e.g., "Blue Sunglasses", "Blue Earring", "None"
        uint256 rarity;    // Rarity score (1-100)
    }

    // Mapping from token ID to BluePunk data
    mapping(uint256 => BluePunk) public bluePunks;

    // Minting price (in wei)
    uint256 public mintPrice = 0.06 ether; // Thematic pricing for punk vibe

    // Maximum supply of NFTs
    uint256 public constant MAX_SUPPLY = 10000; // Matches punk-style collection size

    constructor() ERC721("BluePunkNFT", "BPUNK") Ownable(msg.sender) {}

    // Mint a new BluePunk NFT
    function mintBluePunkNFT(
        address to,
        string memory tokenURI,
        string memory hairStyle,
        string memory accessory,
        uint256 rarity
    ) public payable returns (uint256) {
        require(msg.value >= mintPrice, "Insufficient ETH sent");
        require(_tokenIdCounter.current() < MAX_SUPPLY, "Max supply reached");
        require(rarity >= 1 && rarity <= 100, "Rarity must be between 1 and 100");

        uint256 newTokenId = _tokenIdCounter.current();
        _tokenIdCounter.increment();

        _safeMint(to, newTokenId);
        _setTokenURI(newTokenId, tokenURI);

        // Store BluePunk attributes
        bluePunks[newTokenId] = BluePunk({
            hairStyle: hairStyle,
            accessory: accessory,
            rarity: rarity
        });

        return newTokenId;
    }

    // Get BluePunk attributes for a token
    function getBluePunk(uint256 tokenId) public view returns (BluePunk memory) {
        require(_exists(tokenId), "Token does not exist");
        return bluePunks[tokenId];
    }

    // Update mint price (only owner)
    function setMintPrice(uint256 newPrice) public onlyOwner {
        mintPrice = newPrice;
    }

    // Withdraw contract balance (only owner)
    function withdraw() public onlyOwner {
        uint256 balance = address(this).balance;
        payable(owner()).transfer(balance);
    }

    // Override required by ERC721URIStorage
    function _burn(uint256 tokenId) internal override(ERC721, ERC721URIStorage) {
        super._burn(tokenId);
    }

    // Override required by ERC721URIStorage
    function tokenURI(uint256 tokenId)
        public
        view
        override(ERC721, ERC721URIStorage)
        returns (string memory)
    {
        return super.tokenURI(tokenId);
    }

   
